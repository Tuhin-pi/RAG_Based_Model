{
  "manifest_version": 3,
  "name": "YouTube Link Saver with Chat",
  "version": "1.1",
  "description": "Saves YouTube links and shows a chat popup.",
  "permissions": ["cookies", "activeTab"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "content.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
